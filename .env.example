# Application Configuration
APP_NAME=AiPowerHouse UI
APP_VERSION=0.1.0
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aipowerhouse
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# AI Provider API Keys
# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ENDPOINT=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_ENDPOINT=https://api.anthropic.com/v1
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4096

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_ENDPOINT=https://generativelanguage.googleapis.com/v1
GOOGLE_MODEL=gemini-pro
GOOGLE_MAX_TOKENS=2048

# X.AI (Grok)
XAI_API_KEY=your-xai-api-key
XAI_ENDPOINT=https://api.x.ai/v1
XAI_MODEL=grok-1

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUTS=console

# Monitoring
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Governance & Compliance
GOVERNANCE_PROMPT_FIREWALL=true
GOVERNANCE_HUMAN_REVIEW=false
GOVERNANCE_DATA_RESIDENCY=us-central1
GOVERNANCE_AUDIT_TRAIL=true
GOVERNANCE_COMPLIANCE_MODE=moderate
